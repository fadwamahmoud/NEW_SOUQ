@model NEW_SOUQ_PROJECT.Models.Request
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Shop</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="OneTech shop project">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link rel="stylesheet" type="text/css" href="~/Content/CSS/BootStrap/bootstrap.min.css">
    <link href="~/Content/plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/slick-1.8.0/slick.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/responsive.css">



</head>

<body>

    <div class="super_container">

        <!-- Header -->

        <header class="header">

            <!-- Top Bar -->

            <div class="top_bar">
                <div class="container">
                    <div class="row">
                        <div class="col d-flex flex-row">
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="top_bar_contact_item">
                                    <div class="top_bar_icon"><img src="~/Content/Images/phone.png" alt=""> </div>
                                    @Html.ActionLink("Admin", "AdminPage", "Home")
                                </div>
                            }
                            @if (User.IsInRole("Seller"))
                            {
                                <div class="top_bar_contact_item">
                                    <div class="top_bar_icon">
                                        <img src="~/Content/Images/mail.png" alt="">
                                    </div>@Html.ActionLink("Your Products", "SellerPage", "Home")
                                </div>

                            }


                            <div class="top_bar_content ml-auto">

                                <div class="top_bar_user">
                                    @*<div class="user_icon"><img src="~/Content/Images/user.svg" alt=""></div>
                                        <div><a href="#">Register</a></div>
                                        <div><a href="#">Sign in</a></div>*@
                                    @Html.Partial("_LoginPartial")

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Header Main -->

            <div class="header_main">
                <div class="container">
                    <div class="row">

                        <!-- Logo -->
                        <div class="col-lg-2 col-sm-3 col-3 order-1">
                            <div class="logo_container">
                                <div class="logo"><a href="#">OneTech</a></div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>



           

        </header>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="container fill_height">
                <h4>Request</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Type,
               new List<SelectListItem>()
               {
                   new SelectListItem()
                   {
                       Text ="Category",
                       Value= "Category"
                   },
                   new SelectListItem()
                   {
                       Text ="Brand",
                       Value= "Brand"
                   }
               }
               , new { htmlAttributes = new { @class = "form-control" , font_size= "larger"
                            } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @*@Html.ActionLink("Send Request", "RequestNew", Model)*@

                        <input type="submit" value="Send Request" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

       
        <!-- Footer -->

        <footer class="footer">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 footer_col">
                        <div class="footer_column footer_contact">
                            <div class="logo_container">
                                <div class="logo"><a href="#">OneTech</a></div>
                            </div>
                            <div class="footer_title">Got Question? Call Us 24/7</div>
                            <div class="footer_phone">+38 068 005 3570</div>
                            <div class="footer_contact_text">
                                <p>17 Princess Road, London</p>
                                <p>Grester London NW18JR, UK</p>
                            </div>
                            <div class="footer_social">
