@model Product
<ul class="cart_list" style="margin-bottom: 10px">
    <li class="cart_item clearfix">
        <div class="cart_item_image"><img src=@Model.Image alt=""></div>
        <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
            <div class="cart_item_name cart_info_col">
                <div class="cart_item_title">Name</div>
                <div class="cart_item_text">@Model.Name</div>
            </div>
            <div class="cart_item_color cart_info_col">
                <div class="cart_item_title">Color</div>
                <div class="cart_item_text"><span style="background-color:#999999;"></span></div>
            </div>

            <div class="cart_item_price cart_info_col">
                <div class="cart_item_title">Price</div>
                <div id="@Model.Price" class="cart_item_text">@Model.Price</div>
            </div>
            <div class="cart_item_price cart_info_col">
                <div class="cart_item_title">Price after sale</div>
                <div id="@Model.PriceAfterSale" class="cart_item_text">@Model.PriceAfterSale</div>
            </div>
            <div class="cart_item_price cart_info_col">
                <div class="cart_item_title">Category</div>
                <div class="cart_item_text">@Model.Category.Name</div>
            </div>
            <div class="cart_item_price cart_info_col">
                <div class="cart_item_title">Brand</div>
                <div class="cart_item_text">@Model.Brand.Name</div>
            </div>

            <a href="#" onclick='EditPrice("@Model.Id")' data-toggle="modal" data-target="#myModal">Edit Price</a>

            <a  href="#" id="@Model.Id" class="delete-prompt">Delete</a>

        </div>
    </li>
</ul>
<script type="text/javascript">

    var EditPrice = function (userId) {
        var userId = userId;
        var url = "/Product/Edit_Product?id=" + userId;
            console.log(userId)

            $("#myModalBodyDiv").load(url, function () {
                $("#myModal").modal("show");

            })

    }
    

        
</script>

