@model Product
<!-- Product Item -->
<div class="product_item discount">
    <div class="product_border"></div>
    <div class="product_image d-flex flex-column align-items-center justify-content-center"><a href="/Product/Single_Product/@Model.Id"><img src=@Model.Image alt=""></a></div>
    <div class="product_content">
        <div class="product_price">$@Model.PriceAfterSale<span>$@Model.Price</span></div>
        <div class="product_name"><div><a href="/Product/Single_Product/@Model.Id" tabindex="0">@Model.Name</a></div></div>
    </div>
    <div class="product_fav"><i class="fas fa-heart"></i></div>
    <ul class="product_marks">
        <li class="product_mark product_discount">Sale</li>
        <li class="product_mark product_new">new</li>
    </ul>
</div>
